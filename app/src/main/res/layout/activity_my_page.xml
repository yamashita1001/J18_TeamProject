<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ツールバー（画面上部） -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="マイページ" />

        <!--        &lt;!&ndash; 画面遷移をわかりやすくするためのテキスト(後に削除予定) &ndash;&gt;-->
        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="マイページ"-->
        <!--            android:textSize="20sp"-->
        <!--            android:gravity="center"-->
        <!--            android:paddingTop="12dp"-->
        <!--            android:paddingBottom="20dp"-->
        <!--            android:layout_marginStart="8dp"-->
        <!--            android:layout_marginEnd="8dp"-->
        <!--            android:background="#FFFFFF"/>-->



        <!-- 過去の水分摂取量の合計部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:background="#FFFFFF">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="プロフィール"
                android:textSize="16sp" />



        </LinearLayout>
        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>

        <!-- 名前部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#FFFFFF">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="名前"
                android:textSize="16sp" />

            <!-- 自分の名前表示 -->
            <TextView
                android:id="@+id/myName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="自分の名前(仮)"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="15dp"
                android:gravity="left" />

            <!-- 編集ボタンのテキスト -->
            <TextView
                android:id="@+id/editNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="編集"
                android:textColor="#1D76FF"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"/>
<!--                android:onClick="goToEditMyPageActivity"/>-->


        </LinearLayout>
        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>


        <!-- 名前部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#FFFFFF">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="年齢"
                android:textSize="16sp" />

            <!-- 自分の年齢表示 -->
            <TextView
                android:id="@+id/myAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25歳(仮)"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="15dp"
                android:gravity="left" />

            <!-- 編集ボタンのテキスト -->
            <TextView
                android:id="@+id/editAgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="編集"
                android:textColor="#1D76FF"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"/>
            <!--                android:onClick="goToEditMyPageActivity"/>-->



        </LinearLayout>
        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>

        <!-- 体重部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#FFFFFF">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="体重"
                android:textSize="16sp" />

            <!-- 自分の年齢表示 -->
            <TextView
                android:id="@+id/myBodyWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60kg(仮)"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="15dp"
                android:gravity="left" />

            <!-- 編集ボタンのテキスト -->
            <TextView
                android:id="@+id/editBodyWeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="編集"
                android:textColor="#1D76FF"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp" />
<!--                android:onClick="goToEditMyPageActivity"/>-->


        </LinearLayout>

        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>

        <!-- 身長部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#FFFFFF">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="身長"
                android:textSize="16sp" />

            <!-- 自分の身長表示 -->
            <TextView
                android:id="@+id/myHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="170cm(仮)"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="15dp"
                android:gravity="left" />

            <!-- 編集ボタンのテキスト -->
            <TextView
                android:id="@+id/editHeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="編集"
                android:textColor="#1D76FF"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp" />
<!--                android:onClick="goToEditMyPageActivity"/>-->


        </LinearLayout>
        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>

        <!-- 過去の水分摂取量の合計部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:background="#FFFFFF">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="過去のデータ"
                android:textSize="16sp" />



        </LinearLayout>
        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>

        <!-- 過去の水分摂取量の合計部分  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:minHeight="48dp"
                android:padding="15dp"
                android:text="過去の水分摂取量合計"
                android:textSize="16sp" />

            <!-- 過去の水分摂取合計表示 -->
            <TextView
                android:id="@+id/waterTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16L(仮)"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:padding="15dp"
                android:gravity="right" />


        </LinearLayout>
        <!-- 区切り線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#E6E6E6"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>
